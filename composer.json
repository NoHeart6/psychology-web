{
    "name": "wisnu/php-mongodb-app",
    "description": "PHP MongoDB Application",
    "type": "project",
    "require": {
        "php": "^8.2",
        "mongodb/mongodb": "^1.12",
        "ext-mongodb": "*",
        "heroku/heroku-buildpack-php": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
